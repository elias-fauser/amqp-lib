{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "inlineSources": true,
        "inlineSourceMap": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "src/*": ["src/*"]
        }
    },
    "include": ["src/**/*", "usecases/**/*"],
    "exclude": ["node_modules"]
}
